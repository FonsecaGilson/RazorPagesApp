@page
@model RazorPagesApp.Pages_Aluno.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Cadastrar novo Aluno</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Aluno.Nome" class="control-label"></label>
                <input asp-for="Aluno.Nome" class="form-control" />
                <span asp-validation-for="Aluno.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aluno.Usuario" class="control-label"></label>
                <input asp-for="Aluno.Usuario" class="form-control" />
                <span asp-validation-for="Aluno.Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aluno.Senha" class="control-label"></label>
                <input asp-for="Aluno.Senha" class="form-control" />
                <span asp-validation-for="Aluno.Senha" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
